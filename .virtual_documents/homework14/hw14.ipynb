fig, axes = plt.subplots(1, 2, figsize=(12, 6))

def plot_luminosity_class(df, label, color, ax):
    mask = df['SpType'].str.contains(label, na=False)
    ax.scatter(df[mask]['B-V'], df[mask]['M_V'], s=5, label=label, c=color, alpha=0.5)
